{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2020",
        "outDir": "ckanext/{{ cookiecutter.project_shortname }}/assets/scripts/",
        // "declaration": true,
        "alwaysStrict": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": true,
        "inlineSourceMap": true,
    },
    "include": ["ckanext/{{ cookiecutter.project_shortname }}/assets/ts/"]
}
